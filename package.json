{
  "name": "homepage",
  "version": "1.0.0",
  "description": "My personal homepage",
  "author": "Markus Appel",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon server/index.js --watch server",
    "build": "nuxt build",
    "build:full": "npm run build && npm run build:games",
    "build:games": "npm run build:breakout && npm run build:evolife",
    "build:breakout": "cd games/breakout && npm run build",
    "build:evolife": "cd games/EvolutronicLife && npm run build",
    "install:games": "npm run install:breakout && npm run install:evolife",
    "install:breakout": "cd games/breakout && npm install",
    "install:evolife": "cd games/EvolutronicLife && npm install",
    "start": "cross-env NODE_ENV=production node server/index.js",
    "generate": "nuxt generate",
    "lint": "eslint --ext .js,.vue --ignore-path .eslintignore .",
    "lint:fix": "eslint --ext .js,.vue --ignore-path .eslintignore --fix ."
  },
  "lint-staged": {
    "*.{js,vue}": "npm run lint:fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@nuxtjs/axios": "^5.3.6",
    "amplitudejs": "^5.0.3",
    "cross-env": "^5.2.0",
    "express": "^4.16.4",
    "nuxt": "^2.0.0"
  },
  "devDependencies": {
    "@nuxtjs/eslint-config": "^2.0.0",
    "@nuxtjs/eslint-module": "^1.0.0",
    "@nuxtjs/style-resources": "^1.0.0",
    "babel-eslint": "^10.0.1",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-nuxt": ">=0.4.2",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.0.0",
    "lint-staged": "^10.0.0",
    "node-sass": "^4.13.1",
    "nodemon": "^1.18.9",
    "prettier": "^1.19.1",
    "sass-loader": "^8.0.2"
  }
}
